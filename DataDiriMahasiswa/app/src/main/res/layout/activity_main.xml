<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.d2j_00.datadirimahasiswa.MainActivity"
    android:background="#2e720f">

    <ImageView
        android:layout_width="530dp"
        android:layout_height="110dp"
        android:id="@+id/imageView2"
        android:src="@drawable/gambar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/hilmi"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :Ibrahim Hilmi"
        android:id="@+id/textView"
        android:textSize="24dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM : A22.2015.02476"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#c0c0c0"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motto : Berbuat Sedikit Lebih Baik Daripada Tidak Sama Sekali"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#f6f6f6"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cita-Cita : Mendapat Pasangan Hidup Yang Sesuai Harapan #HIGHHOPE"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#cfcfcf"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageView
        android:layout_width="530dp"
        android:layout_height="110dp"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/gambar1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PEMROGRAMAN MOBILE"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textColor="#ffaa00"
        android:layout_above="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#END"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textColor="#ffaa00"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp" />

</RelativeLayout>
